<div class="menu-container">
    <div class="row">
        <div class="col-12">
            <%= form_tag(search_path, method: "get", remote: true) do %>
            <div class="input-group mb-5">
                <div class="col-8 p-0">
                    <%= text_field_tag :search, '', class:'form-control', placeholder: 'Search...', onkeydown:'clickSubmit();'%>
                </div>
                <div class="col-4 p-0">
                    <%= select_tag "filter", options_for_select(['Filtrar por', 
                    'Sin lactosa', 
                    'Gluten Free',
                    'Vegana', 
                    'Vegetariana']), class:'custom-select', onchange:'clickSubmit()'%>
                    <%= submit_tag "Search", class:'d-none btn btn-danger', id:'search_submit'%>
                </div>
            </div>
            <% end %>
        </div>
    </div>
    <div id="menu-products-container">
        <%= render 'menu/products'%>
    </div>
</div>

<script>
    function clickSubmit() {
        $("#search_submit").click();
    }

</script>